<div class="row">
  <div class="col-xs-6">
    <h4>Appointment Type</h4>
    <ul class="list-group">
      <li class="list-group-item">
        {{model.service_option.type}}
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-xs-6">
    <h4>Service Option</h4>
    <ul class="list-group">
      <li class="list-group-item">
        {{model.service_option.name}}
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-xs-6">
    <h4>Clinic</h4>
    <ul class="list-group">
      <li class="list-group-item">
        {{model.name}}
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-xs-6">
    <h4>Week</h4>
    <div class="list-group">
      {{#each next_weeks as |week|}}
        {{#link-to "appointments" (query-params selectedDate=week.date clinic_id=model.id) class="btn btn-default list-group-item"}}
          Week {{week.weekName}} - {{week.formattedDate}}
        {{/link-to}}
      {{/each}}
    </div>
  </div>
</div>
